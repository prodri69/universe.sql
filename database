psql --username=freecodecamp --dbname=postgres
\c universe

CREATE TABLE galaxy (
    galaxy_id SERIAL PRIMARY KEY,
    Name VARCHAR(30) UNIQUE NOT NULL,
    Type TEXT,
    Size NUMERIC,
    Age_in_years NUMERIC,
    population INT UNIQUE
);

CREATE TABLE star (
    star_id SERIAL PRIMARY KEY,
    Name VARCHAR(30) NOT NULL,
    Spectral_type TEXT,
    Mass NUMERIC,
    Radius_in_km NUMERIC,
    Galaxy_id INT REFERENCES Galaxy(Galaxy_id) NOT NULL,
    population INT UNIQUE,
    Has_water BOOLEAN
);

CREATE TABLE Star (
    Star_2_id SERIAL PRIMARY KEY,
    Name VARCHAR(30) NOT NULL,
    Spectral_type TEXT,
    Mass NUMERIC,
    Radius_in_km NUMERIC,
    Temperature_in_C NUMERIC,
    Galaxy_id INT REFERENCES Galaxy(Galaxy_id) NOT NULL,
    population INT UNIQUE,
    Has_water BOOLEAN
);

CREATE TABLE planet (
    planet_id SERIAL PRIMARY KEY,
    Name VARCHAR(30) NOT NULL,
    Type TEXT,
    Mass_in_kg NUMERIC,
    Star_id INT REFERENCES Star(Star_id) NOT NULL,
    population INT UNIQUE,
    Has_water BOOLEAN
);


CREATE TABLE Planet_B (
    Planet_id SERIAL PRIMARY KEY,
    Name VARCHAR(30) NOT NULL,
    Type TEXT,
    Mass_in_kg NUMERIC,
    Radius_in_km NUMERIC,
    Distance_from_star_in_km NUMERIC,
    Star_id INT REFERENCES Star(Star_id) NOT NULL,
    population INT UNIQUE,
    Has_water BOOLEAN,
    Surface_temperature_in_C NUMERIC,
    Atmosphere_composition TEXT,
    Geological_activity BOOLEAN,
    Magnetic_field BOOLEAN
);


CREATE TABLE moon (
    moon_id SERIAL PRIMARY KEY,
    Name VARCHAR(30) NOT NULL,
    Type TEXT,
    Radius_in_km NUMERIC,
    Planet_id INT REFERENCES Planet(Planet_id) NOT NULL,
    population INT UNIQUE,
    Has_water BOOLEAN
);



CREATE TABLE moon_2 (
    moon_2_id SERIAL PRIMARY KEY,
    Name VARCHAR(30) NOT NULL,
    Type TEXT,
    Radius_in_km NUMERIC,
    Planet_id INT REFERENCES Planet(Planet_id) NOT NULL,
    population INT UNIQUE,
    Has_water BOOLEAN
);

